{
    "name": "terminal42/contao-easy_themes_c4",
    "type": "contao-bundle",
    "description": "Contao Open Source CMS extension easy_themes_c4",
    "keywords": ["contao", "easy", "themes"],
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Burg",
            "homepage": "https://andreasburg.de"
        }
    ],    
    "support": {
        "issues": "https://github.com/Aybee/contao-easy_themes_c4/issues",
        "source": "https://github.com/Aybee/contao-easy_themes_c4"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle":"^4.13 || ^5.0",
        "doctrine/dbal": "^3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Aybee\\EasyThemesBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Aybee\\EasyThemesBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": "tools/ecs/vendor/bin/ecs check src/ --fix --ansi"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": true,
            "contao/manager-plugin": true
        }
    }
}
